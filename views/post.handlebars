<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h2>{{title}}</h2>
        <p class="post-metadata">Posted by {{user.username}} on {{format_date createdAt}}</p>
      </div>
      <div class="card-body">
        <p class="card-text">{{content}}</p>
      </div>
    </div>
  </div>
</div>

{{#if logged_in}}
<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3>Add a Comment</h3>
      </div>
      <div class="card-body">
        <form class="comment-form">
          <div class="mb-3">
            <textarea class="form-control" id="comment-content" rows="3" required></textarea>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{/if}}
