<div class="dashboard">
  <h2>Your Dashboard</h2>
  
  <button class="btn btn-primary mb-4" id="new-post-btn">+ New Post</button>

  <div id="new-post-form" class="card mb-4" style="display: none;">
    <div class="card-body">
      <h3>Create New Post</h3>
      <form class="new-post-form">
        <div class="mb-3">
          <label for="post-title" class="form-label">Title</label>
          <input type="text" class="form-control" id="post-title" required>
        </div>
        <div class="mb-3">
          <label for="post-content" class="form-label">Content</label>
          <textarea class="form-control" id="post-content" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
  </div>

  {{#if posts.length}}
  <div class="posts-list">
    {{#each posts as |post|}}
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="card-title">
          <a href="/dashboard/edit/{{post.id}}">{{post.title}}</a>
        </h3>
        <p class="card-text">Created on {{format_date post.created_at}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p>You haven't created any posts yet.</p>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
