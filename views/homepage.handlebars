<div class="tech-categories">
  <h2>Tech Categories</h2>
  <div class="category-grid">
    {{#each categories as |category|}}
    <a href="/category/{{category}}" class="category-card">
      <i class="tech-icon {{category-icon category}}"></i>
      <h3>{{category}}</h3>
    </a>
    {{/each}}
  </div>
</div>

<div class="featured-posts">
  <h2>Latest in Tech</h2>
  <div class="row">
    {{#each posts as |post|}}
    <div class="col-md-12 mb-4">
      <div class="post-card">
        <div class="post-header">
          <h2 class="post-title">
            <a href="/post/{{post.id}}">{{post.title}}</a>
          </h2>
          <div class="post-meta">
            Posted by {{post.user.username}} on {{format_date post.created_at}}
          </div>
        </div>
        <div class="post-content">
          {{post.content}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>